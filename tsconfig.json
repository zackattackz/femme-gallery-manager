{
  "compilerOptions": {
    "allowJs": true,
    "module": "es6",
    "lib": ["DOM", "ES2019"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["src/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
